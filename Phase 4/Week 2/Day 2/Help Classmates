class Solution {
    public static int[] help_classmate(int arr[], int n) {
        int[] result = new int[n];
        for (int i = 0; i < n; i++) {
            result[i] = -1;
            for (int j = i + 1; j < n; j++) {
                if (arr[j] < arr[i]) {
                    result[i] = arr[j];
                    break; 
                }
            }
        }
        return result;
    }
}
